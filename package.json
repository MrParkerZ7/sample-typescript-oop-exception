{
  "name": "sample_typescript_decorator",
  "description": "I couldn't find another way without lerna lib. but, it should perfectly fine if you already use lerna",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf node_modules && rimraf dist && rimraf coverage",
    "tsc": "tsc",
    "tsc:watch": "tsc -watch",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "catch-decorator": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.1.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "directories": {
    "lib": "lib"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
